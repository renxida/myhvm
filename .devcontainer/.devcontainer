{
    "name": "Rust and HVM Development Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "installZsh": true,
            "username": "vscode",
            "uid": "1000",
            "gid": "1000",
            "upgradePackages": true
        }
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "rust-lang.rust",
        "vadimcn.vscode-lldb",
        "mutantdino.resourcemonitor",
        "matklad.rust-analyzer"
    ],
    "postCreateCommand": "apt-get update && apt-get install -y curl build-essential libssl-dev pkg-config && curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y && rustup default nightly && cargo install hvm"
}